<div class="d-flex flex-column min-vh-100">
    <div class="d-flex flex-grow-1">
        <nav class="bg-dark text-white p-3 min-vh-100 flex-shrink-0" style="width: 250px;">
            <h4 class="text-center">Menu</h4>
            <div class="d-flex justify-content-center">
                <small class="text-secondary">P√°gina Inicial</small>
            </div>
            <hr>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="/eventos/" class="nav-link text-white">‚úÖ Criar Evento</a>
                </li>
                <li class="nav-item">
                    <a href="/eventos/meuseventos" class="nav-link text-white">üìÖ Meus Eventos Criados</a>
                </li>
                <li class="nav-item">
                    <a href="/eventos/proximos" class="nav-link text-white">‚è≥ Pr√≥ximos Eventos</a>
                </li>
                <li class="nav-item">
                    <a href="/eventos/eventosinscritos" class="nav-link text-white">üîú Eventos Inscritos</a>
                </li>
            </ul>
        </nav>

        <div class="flex-grow-1 p-4 container-fluid">
            <div class="jumbotron">
                <h1 class="display-4">Bem-vindo, Guizzy!</h1>
            </div>

            <div class="row">
                <!-- Eventos Inscritos -->
                <div class="col-md-6" id="seusEventos">
                    <h2>Eventos Inscritos:</h2>
                    <hr>
                    <div class="list-group">
                        {{#each seusEventos}}
                            <div class="list-group-item list-group-item-action border p-3 mb-2">
                                <h5>{{this.titulo}}</h5>
                                <p>{{this.descricao}}</p>
                                <a href="/eventos/vermais/{{this._id}}" class="btn btn-primary btn-sm float-end">Ver Mais</a>
                            </div>
                        {{else}}
                            <p>Nenhum evento encontrado.</p>
                        {{/each}}
                    </div>
                </div>

                <!-- Pr√≥ximos Eventos -->
                <div class="col-md-6" id="proximosEventos">
                    <h2>Pr√≥ximos Eventos:</h2>
                    <hr>
                    <div class="list-group">
                        {{#each proximosEventos}}
                            <div class="list-group-item list-group-item-action border p-3 mb-2">
                                <h5>{{this.titulo}}</h5>
                                <p>{{this.descricao}}</p>
                                <p><strong>Data:</strong> {{formatarData this.data}}</p>
                                <p><strong>Inscritos:</strong> {{this.inscritos.length}}/{{this.capacidade}}</p>
                                <p><strong>Pre√ßo:</strong> {{#if preco}}{{formatarMoeda preco}}{{else}}Gratuito{{/if}}                      </p>
                                <p>Criado por: {{this.criador.nomeDeUsuario}}</p>

                                <div class="d-flex gap-2">
                                    {{#if estaInscrito}}
                                        <button class="btn btn-warning btn-sm unsubscribe-event" data-id="{{this._id}}">Desinscrever</button>
                                    {{else}}
                                        <form action="/eventos/inscrever/{{this._id}}" method="POST">
                    <button type="submit" class="btn btn-success btn-sm">Inscrever</button>
                                        </form>
                                    {{/if}}
                                </div>

                                <a href="/eventos/vermais/{{this._id}}" class="btn btn-primary btn-sm mt-2">Ver Mais</a>
                            </div>
                        {{else}}
                            <p>Nenhum evento encontrado.</p>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-2 mt-auto">
        <div class="container text-center">
            <p>Desenvolvido por 
                <a class="text-white" href="https://github.com/guilhermecolares" target="_blank" rel="noopener noreferrer">
                    Guilherme Colares
                </a> &copy; 2025
            </p>
        </div>
    </footer>
</div>

