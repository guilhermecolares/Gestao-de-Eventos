    {{#if eventosInscritos.length}}
        <div class="list-group">
            {{#each eventosInscritos}}
                <div class="list-group-item mb-2">
                    <h5>{{this.titulo}}</h5>
                    <p><strong>Data:</strong> {{formatarData this.data}}</p>
                    <p><strong>Local:</strong> {{this.local}}</p>
                    <p><strong>Criado por:</strong> {{this.criador.nomeDeUsuario}}</p>

                    <div class="d-flex gap-2">
                        <form action="/eventos/desinscrever/{{this._id}}" method="POST">
                            <button class="btn btn-warning btn-sm unsubscribe-event">Desinscrever</button>
                        </form>
                            <a href="/eventos/vermais/{{this._id}}" class="btn btn-primary btn-sm">Ver Mais</a>
                    </div>
                </div>
