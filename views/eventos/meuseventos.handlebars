<div class="d-flex">
    <!-- Sidebar -->
    <nav class="bg-dark text-white p-3 min-vh-100" style="width: 250px;">
        <h4 class="text-center">Menu</h4>
        <hr>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="/eventos/" class="nav-link text-white">‚úÖ Criar Evento</a>
            </li>
            <li class="nav-item">
                <a href="/eventos/meuseventos" class="nav-link text-white">üìÖ Meus Eventos Criados</a>
            </li>
            <li class="nav-item">
                <a href="/eventos/proximos" class="nav-link text-white">‚è≥ Pr√≥ximos Eventos</a>
            </li>
            <li class="nav-item">
                <a href="/eventos/eventosinscritos" class="nav-link text-white">üîú Eventos Inscritos</a>
            </li>
        </ul>
    </nav>

    <!-- Conte√∫do Principal -->
    <div class="flex-grow-1 p-4">
        <div class="container">
            <h1>Meus Eventos</h1>
            <hr>
            
            {{#if eventos.length}}
                <div class="list-group">
                    {{#each eventos}}
                        <div class="list-group-item list-group-item-action border p-3 mb-2">
                            <h5>{{titulo}}</h5>
                            <p>{{descricao}}</p>
                            <p><strong>Data:</strong> {{formatarData this.data "DD/MM/YYYY"}}</p> 
                            <a href="/eventos/edit/{{_id}}" class="btn btn-success btn-sm">Editar</a>
                            <button class="btn btn-danger btn-sm delete-event" data-id="{{this._id}}">Excluir</button>
                            <a href="/eventos/{{_id}}" class="btn btn-primary btn-sm float-end">Ver Mais</a>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <p>Nenhum evento criado.</p>
            {{/if}}
        </div>
    </div>
</div>